<!-- Set style -->
<link rel="stylesheet" href="/styles.css"/>

<style>
   
   /* Button apperance values */
    .button {
        background-color: #f50606; 
        border: black;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 20px;
        margin: 4px 2px;
        cursor: pointer;
        border-radius: 4px;
    }
    /* Different text colours */
    .Greentext { 
        color: green;
      }
    .Yellowtext { 
        color: yellow;
      }
    .GreyText {
        color: grey;
      }
      /* Setting backround image */
      body {
    background-image: url('/images/GameImage.jpg');
    font-family: "Georgia", Times, serif;
    }
